<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iglushkov.calories">

    <application
        android:name="com.iglushkov.calories.helpers.GlobalVariables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calories">
        <activity
            android:name="com.iglushkov.calories.ChangeImtActivity"
            android:exported="false" />
        <activity
            android:name="com.iglushkov.calories.AddSportActivity"
            android:exported="false" />
        <activity
            android:name="com.iglushkov.calories.AddFoodActivity"
            android:exported="false" />
        <activity
            android:name="com.iglushkov.calories.MainDisplayActivity"
            android:exported="true"
            android:label="@string/title_activity_main_display"
            android:theme="@style/Theme.Calories.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.iglushkov.calories.AuthActivity" />
        <activity android:name="com.iglushkov.calories.RegistrationActivity" />
    </application>

</manifest>