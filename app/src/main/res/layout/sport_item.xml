<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/sportDateItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="12/6/2022"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sportNameItem"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="68dp"
        android:text="Наименование:"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sportCalItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sportCalItem"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Сожжено калорий:"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sportTimeItem"
        app:layout_constraintTop_toBottomOf="@+id/sportNameItem" />

    <TextView
        android:id="@+id/sportNameItemText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:text="спорт"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sportTimeItemText"
        app:layout_constraintTop_toBottomOf="@+id/sportDateItemText" />

    <TextView
        android:id="@+id/sportTimeItemText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:text="20 мин"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sportCalItemText"
        app:layout_constraintTop_toBottomOf="@+id/sportNameItemText" />

    <TextView
        android:id="@+id/sportCalItemText"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginStart="30dp"
        android:text="560"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/sportTimeItem"
        app:layout_constraintTop_toBottomOf="@+id/sportTimeItemText" />

    <TextView
        android:id="@+id/sportTimeItem"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="7dp"
        android:text="Время выполнения:"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sportCalItem" />

    <Button
        android:id="@+id/sportItemDelBtn"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#E91E63"
        android:text=" Удалить"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>